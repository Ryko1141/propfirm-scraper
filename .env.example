# cTrader Open API Configuration
# Get your credentials at: https://openapi.ctrader.com

# OAuth Credentials
CTRADER_CLIENT_ID=your_client_id_here
CTRADER_CLIENT_SECRET=your_client_secret_here
CTRADER_ACCESS_TOKEN=your_access_token_here

# Trading Account
ACCOUNT_ID=your_account_id_here

# Telegram Notifications (Optional)
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Risk Management Rules
# Maximum daily loss as percentage of balance (e.g., 5.0 = 5%)
MAX_DAILY_LOSS_PERCENT=5.0

# Maximum single position size as percentage of equity (e.g., 10.0 = 10%)
MAX_POSITION_SIZE_PERCENT=10.0
