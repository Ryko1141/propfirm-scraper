# Platform Selection
# Choose your trading platform: "ctrader" or "mt5"
PLATFORM=ctrader

# ============================================================
# Account Information
# ============================================================

# Account label for identification
ACCOUNT_LABEL=My Trading Account

# Prop firm name (optional, for using predefined rules)
# Options: ftmo, alpha, alpha_capital, funded_trader, topstep, 5percenters
# Leave empty to use custom rules below
FIRM_NAME=ftmo

# Program ID (optional, for database rule lookup)
# Examples: stellar_1step, stellar_2step, evaluation_2step, stellar_lite
# Used to load specific program rules from the database
# Leave empty to use predefined firm rules or custom rules
PROGRAM_ID=

# Starting account balance (for total drawdown calculation)
STARTING_BALANCE=100000.0

# ============================================================
# cTrader Open API Configuration
# Get your credentials at: https://openapi.ctrader.com
# ============================================================

# OAuth Credentials (cTrader only)
CTRADER_CLIENT_ID=your_client_id_here
CTRADER_CLIENT_SECRET=your_client_secret_here
CTRADER_ACCESS_TOKEN=your_access_token_here

# ============================================================
# MetaTrader 5 Configuration
# ============================================================

# MT5 Account Credentials (MT5 only)
MT5_PASSWORD=your_mt5_password_here
MT5_SERVER=your_broker_server_here
# MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe  # Optional: custom MT5 path

# ============================================================
# Common Settings (Both Platforms)
# ============================================================

# Trading Account
# For cTrader: Your cTrader account ID
# For MT5: Your MT5 account number
ACCOUNT_ID=your_account_id_here

# Telegram Notifications (Optional)
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================================
# Custom Risk Management Rules
# (Only used if FIRM_NAME is not set or not recognized)
# ============================================================

# Maximum daily drawdown as percentage of balance (e.g., 5.0 = 5%)
MAX_DAILY_LOSS_PERCENT=5.0

# Maximum total drawdown as percentage of starting balance (e.g., 10.0 = 10%)
MAX_TOTAL_DRAWDOWN_PERCENT=10.0

# Maximum risk per trade as percentage of balance (e.g., 1.0 = 1%)
MAX_POSITION_SIZE_PERCENT=1.0

# Maximum total lot size across all positions
MAX_OPEN_LOTS=10.0

# Maximum number of concurrent positions
MAX_POSITIONS=10

# Warning threshold (0.8 = warn at 80% of limit)
WARN_BUFFER_PCT=0.8

# Check interval in seconds
CHECK_INTERVAL=60
